<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" fx:controller="NodeManager" stylesheets="@../css/styles.css" styleClass="body">
    <Label text="To do app" style="-fx-font-size: 20;"/>
    <Label text="Uni project made by Marcel Marusiak" style="-fx-font-size: 8;"/>
    <VBox fx:id="mainApp">
        <ScrollPane styleClass="edge-to-edge">
            <VBox fx:id="toDoSection">

            </VBox>
        </ScrollPane>

        <VBox styleClass="createNewTaskArea">
            <Text fx:id="nodeTextHelper">Title for new task</Text>
            <TextField promptText="Title for new task" fx:id="nodeTextField"/>
        </VBox>
    </VBox>
</VBox>
