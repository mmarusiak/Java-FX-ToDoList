<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" fx:controller="NodeManager" stylesheets="@../css/styles.css">
    <Label text="To do app" />
    <HBox fx:id="mainApp">
        <ScrollPane styleClass="edge-to-edge">
            <VBox fx:id="toDoSection">
            </VBox>
        </ScrollPane>

        <VBox fx:id="createNewTaskArea">
            <TextArea promptText="Title" fx:id="newTitleArea"></TextArea>
            <TextArea promptText="Description" fx:id="newDescriptionArea"></TextArea>
            <Button onAction="#createNewTask">Create new task!</Button>
        </VBox>
    </HBox>
</VBox>
